<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceInspector" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="RequirementsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="TitleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="NormalPriceTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:background">@drawable/cross_line</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="SalePriceTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="PercentTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:background">#FF4C4C</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
</resources>